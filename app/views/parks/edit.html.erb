<center><h1> Edit Park </h1></center>
<div class='parks-form'>
<%= form_for (@park) do |f| %>
  <div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :location %><br>
  <%= f.text_field :location %>
</div>
<div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <% if f.object.image? %>
    <%= image_tag f.object.image.url %>
    <%= f.label :remove_image %>
    <%= f.check_box :remove_image %>
    
   
  <% end %><br><br>
<%= f.hidden_field :user_id, :value => current_user.id%>
      <%= f.submit "Submit", class:"submit" %>
<% end %>

</div>

