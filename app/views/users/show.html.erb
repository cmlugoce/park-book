
<div class = 'users'>
<div class='wrapper'>
<% if current_user == @user %>
    <h1 class="card-title">Hello <%= @user.name %>!</h1>
  <% else %>
    <h1 class="card-title"><%=@user.name%>'s profile page</h1>
  <% end %>
<% if @user == current_user %>
 <h2> You have logged <%= "#{@user.parks.size}"%> park(s)</h2>
 <% else %>
 <h2>Parks logged: <%= "#{@user.parks.size}" %></h2>
<% end %>
<div id='parks'>
<a href="#" class="js-view-parks btn btn-primary btn-lg" data-id="<%=@user.id%>"> View Parks </a>
<% @user.parks.each do |park| %>
    
    <h2>Park Name: <%= link_to park.name, park_path(park), class:'name' %></h2>
    
    <h3> Park location: <%= park.location %></h3>
    <h3> Park location: <%= @user.trails.distance %></h3>


<% end %>
</div>
<div class="container" style="width:80%;">
  <div class="usersParks">
  </div>
</div>
<br></br>

<% if @user == current_user %>
<h3><%= link_to "Add a Park", new_user_park_path(@user) %></h3>

<% end %>



